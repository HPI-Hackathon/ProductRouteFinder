<script type="text/javascript">
var directionsDisplay;
var directionsService = new google.maps.DirectionsService();
var oldStuff = [];
var map;

function clearOldStuff() {
  for (var i = 0; i < oldStuff.length; i++)
    oldStuff[i].setMap(null);
  oldStuff = [];
}

function bindInfoWindow(marker, infowindow, content) {
  google.maps.event.addListener(marker, "click", function() {
    infowindow.setContent(content);
    infowindow.open(map, marker);
  });
}

function initialize() {
  directionsDisplay = new google.maps.DirectionsRenderer();
  var chicago = new google.maps.LatLng(52.4927028, 13.4519156);
  var mapOptions = {
    zoom: 11,
    center: chicago
  };
  map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
  directionsDisplay.setMap(map);
  
  $("#button-search").click(function() {
    clearOldStuff();
    calcRoute($("#input-from").val(), $("#input-to").val(), parseInt($("#input-radius").val()), function(points) {
      console.log(points);
      var data = {
        "query" : $("#input-query").val(),
        "points" : points,
      }
      io.socket.post("/ebay/ads/", data, function(data, jwres) {
          if (jwres.statusCode !== 200) {
            alert("WTF?!");
            return;
          }
          
          var infowindow = new google.maps.InfoWindow({
            content: "Nothing",
          });
          for (var i in data.markers) {
            var marker = data.markers[i];
            
            var gMarker = new google.maps.Marker({
              position: new google.maps.LatLng(marker.latLng[0], marker.latLng[1]),
              map: map,
              title: marker.title
            });
            oldStuff.push(gMarker);
            var info = "<h3>" + marker.title + "</h3>";
            if (marker.image != "") {
              var image = new Image();
              image.src = marker.image;
              info += "<p><center><img src='" + marker.image + "' /></center></p>";
            }
            info += "<p><a href='" + marker.url + "' target='_blank'>Link</a></p>";
            info += "<p>" + marker.description + "</p>";
            bindInfoWindow(gMarker, infowindow, info);
          }
          console.log(data);
          //alert(data);
      });
    });
    return false;
  });
}

function calcRoute(start, end, radius, pointsCallback) {  
  // dirty hack
  if (end == "")
    end = start;
  
  var request = {
    origin: start,
    destination: end,
    travelMode: google.maps.TravelMode.DRIVING
  };
  directionsService.route(request, function(response, status) {
    if (status == google.maps.DirectionsStatus.OK) {
      // route auf der map setzen falls vorhanden
      if (start != end)
        directionsDisplay.setDirections(response);
      
      var points = response.routes[0].overview_path;
      var pointsSearch = [];
      for (var i = 0; i < points.length; i++) {
        var point = points[i];
        var circleOptions = {
          strokeColor: '#FF0000',
          strokeOpacity: 0.8,
          strokeWeight: 2,
          fillColor: '#FF0000',
          fillOpacity: 0.1,
          map: map,
          center: point,
          radius: radius,
        };
        // Add the circle for every point on the map
        pointCircle = new google.maps.Circle(circleOptions);
        oldStuff.push(pointCircle);
        // ansonsten wenn es nur einen punkt gibt einfach den circle anzeigen
        map.fitBounds(pointCircle.getBounds());
        //console.log(point);
        pointsSearch.push({
          "lat": point.lat(),
          "lng": point.lng(),
          "radius": radius,
        });
      }
      
      pointsCallback(pointsSearch);
    }
  });
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>

